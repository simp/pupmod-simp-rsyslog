  queue.dequeueslowdown="<%= @queue_dequeue_slowdown %>"
<% if !@queue_dequeue_time_begin.empty? -%>
  queue.dequeuetimebegin="<%= @queue_dequeue_time_begin %>"
<% end -%>
<% if !@queue_dequeue_time_end.empty? -%>
