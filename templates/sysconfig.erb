<%
unless @host_list.empty?
  opts = opts + " -l #{Array(@host_list).join(':')}"
end

unless @domain_list.empty?
  opts = opts + " -s #{Array(@domain_list).join(':')}"
end

if @suppress_noauth_warn
  opts = opts + " -w"
end

if @disable_remote_dns
  opts = opts + " -x"
end
-%>
SYSLOGD_OPTIONS="<%= opts %>"
